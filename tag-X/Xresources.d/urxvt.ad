! Fonts
URxvt.font: xft:Inconsolata for Powerline:regular:size=13,xft:WenQuanYi Micro Hei Mono:pixelsize=18:minspace=true,xft:Unifont:pixelsize=18
! ,xft:Noto Sans CJK TC Medium:pixelsize=22:minspace=true
! xft:WenQuanYi Micro Hei Mono:pixelsize=18:minspace=true
! ,xft:Unifont:size=10
URxvt.letterSpace: 0

! Input Method
URxvt.preeditType: Root
URxvt.inputMethod: fcitx

! Scroll
URxvt.scrollBar: false
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.secondaryScreen: true
URxvt.secondaryScroll: false

! Allow bell
URxvt.urgentOnBell: true

! Disable the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755: false
URxvt.iso14755_52: false

! Extensions
URxvt.perl-ext-common: default,matcher,custom-clipboard,vtwheel,resize-font

! Find urls
URxvt.urlLauncher: /usr/bin/xdg-open
URxvt.matcher.button: C1

! URL history
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

! Theme
! Background
URxvt.background: #101010
URxvt.foreground: #d0d0d0
! Black
URxvt.color0: #000000
URxvt.color8: #555753
! Red
URxvt.color1: #cc0000
URxvt.color9: #ef2929
! Green
URxvt.color2: #4e9a06
URxvt.color10: #8ae234
! Yellow
URxvt.color3: #c4a000
URxvt.color11: #fce94f
! Blue
URxvt.color4: #3465a4
URxvt.color12: #729fcf
! Magenta
URxvt.color5: #75507b
URxvt.color13: #ad7fa8
! Cyan
URxvt.color6: #06989a
URxvt.color14: #34e2e2
! White
URxvt.color7: #d3d7cf
URxvt.color15: #eeeeec
! Urls
URxvt.colorUL: #4682B4
